[Service]
ExecStart=/opt/windmachine/venv/bin/python /opt/windmachine/firmware/wp_visuals/wp_visuals
WorkingDirectory=/opt/windmachine/firmware
Restart=always
RestartSec=10
User=display
Group=display
EnvironmentFile=/etc/windmachine/display.env

[Unit]
After=network-online.target

[Install]
WantedBy=multi-user.target
