#!/bin/bash -e

SSH_CONNECT=$1

BASEPORT=2000
SSH_OPTIONS="-NTC -o ServerAliveInterval=120 -o StreamLocalBindUnlink=yes -o ExitOnForwardFailure=yes -o StrictHostKeyChecking=no"

host=$(hostname)
devicenumber=${host##*-}
port=$((BASEPORT+devicenumber))
echo "Using port $port"

exec /usr/bin/ssh $SSH_OPTIONS -R $port:localhost:22 $SSH_CONNECT
